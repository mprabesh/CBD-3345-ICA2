{
  "name": "blog-list",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --ext .js",
    "test": "NODE_ENV=test jest --ci --verbose --detectOpenHandles",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage --ci --verbose --detectOpenHandles",
    "test:report": "NODE_ENV=test jest --coverage --ci --verbose --detectOpenHandles --reporters=default --reporters=jest-junit",
    "test:integration": "NODE_ENV=test jest --config=jest.integration.config.js --ci --verbose --detectOpenHandles",
    "start:dev": "NODE_ENV=dev nodemon index.js",
    "start:test": "NODE_ENV=test node index.js",
    "start:prod": "NODE_ENV=prod node index.js"
  },
  "author": "Prabesh Magar",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.1",
    "mongoose": "^7.4.2",
    "mongoose-unique-validator": "^4.0.0"
  },
  "devDependencies": {
    "dotenv": "^16.3.1",
    "eslint": "^8.46.0",
    "jest": "^29.6.2",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "globalTeardown": "./tests/teardown.js",
    "collectCoverage": false,
    "coverageDirectory": "coverage",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/tests/integration/"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testResultsProcessor": "jest-junit",
    "reporters": [
      "default",
      "jest-junit"
    ]
  },
  "jest-junit": {
    "outputDirectory": "test-results",
    "outputName": "test-results.xml",
    "uniqueOutputName": "false",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  }
}
